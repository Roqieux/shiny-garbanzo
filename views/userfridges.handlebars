    {{>back-btn}}
    <section class="d-flex flex-column align-items-center justify-content-center stuff">
        <h1 id="title">My Phridges</h1>
        <div class="push mt-500px"></div>
        <section class="mb-4">
            {{!-- <input class="textbox" type="Fridge" placeholder="Fridge Name"> --}}
            <section class="mt-4 mx-3">
                <button class="logbtn mx-3 fridge-delete-btn">Remove</button>
            </section>
            <section class="mt-4 mx-3">
                <button class="logbtn mx-3 fridge-add-btn" data-bs-toggle="modal" data-bs-target="#modal">Add +</button>
            </section>
            {{!-- <input class="textbox" type="Fridge" placeholder='Fridge Name'>
            <section class="mt-4 mx-3">
