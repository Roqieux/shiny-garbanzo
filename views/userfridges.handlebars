        <div class="push"></div>
    </section>

    <section class="placeholdertext">
        <h3 class="username-title">{{data.username}}'s Fridges</h3>
        <div class="fridgelist">

            {{#each data.fridges as |fridge|}}
            {{>fridge-details}}
            {{/each}}

        </div>

    </section>

</main>

